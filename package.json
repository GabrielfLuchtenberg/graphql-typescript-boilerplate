{
  "name": "graphql-ts-boilerplate",
  "version": "0.0.1",
  "description": "Awesome project developed with TypeORM.",
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/express": "^4.17.0",
    "@types/ioredis": "^4.0.12",
    "@types/jest": "^24.0.13",
    "@types/node": "^12.0.7",
    "@types/node-fetch": "^2.3.7",
    "@types/sparkpost": "^2.1.4",
    "@types/uuid": "^3.4.4",
    "@types/yup": "^0.26.16",
    "gql2ts": "^1.10.1",
    "jest": "^24.8.0",
    "node-fetch": "^2.6.7",
    "nodemon": "^1.19.1",
    "start-server-and-test": "^1.9.1",
    "ts-jest": "^24.0.2",
    "ts-node": "8.2.0",
    "tslint": "^5.17.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.5.1"
  },
  "dependencies": {
    "@gql2ts/from-schema": "^1.10.1",
    "bcryptjs": "^2.4.3",
    "dotenv": "^8.0.0",
    "express": "^4.17.1",
    "graphql": "^14.3.1",
    "graphql-import": "^0.7.1",
    "graphql-request": "^1.8.2",
    "graphql-tools": "^4.0.4",
    "graphql-yoga": "^1.17.4",
    "ioredis": "^4.10.0",
    "pg": "^7.11.0",
    "reflect-metadata": "^0.1.13",
    "sparkpost": "^2.1.3",
    "typeorm": "0.2.18",
    "uuid": "^3.3.2",
    "yup": "^0.27.0"
  },
  "scripts": {
    "start": "NODE_ENV=dev nodemon --exec ts-node --files src/index.ts",
    "build-schema": "TS_NODE_FILES=true ts-node src/scripts/create-types.ts",
    "db:start": "docker run --rm --name pg-docker -e POSTGRES_PASSWORD=docker -d -p 5432:5432 -v $HOME/docker/volumes/postgres:/var/lib/postgresql/data postgres",
    "test": "NODE_ENV=test TS_NODE_FILES=true jest --forceExit --runInBand.",
    "test:watch": "NODE_ENV=test TS_NODE_FILES=true jest --watch --runInBand.",
    "test:db-start": "docker run --rm --name pg-docker-test -e POSTGRES_DB=postgres-test -e POSTGRES_PASSWORD=docker -d -p 5433:5432 -v $HOME/docker/volumes/postgres-test:/var/lib/postgresql/data postgres"
  }
}
